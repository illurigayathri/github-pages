<!-- Sounds -->
<audio id="flipSound" src="https://assets.mixkit.co/sfx/preview/mixkit-card-flip-1932.mp3"></audio>
<audio id="matchSound" src="https://assets.mixkit.co/sfx/preview/mixkit-achievement-bell-600.mp3"></audio>
<audio id="winSound" src="https://assets.mixkit.co/sfx/preview/mixkit-game-level-completed-2059.mp3"></audio>

<script>
const emojis = [
  'üçé','üçå','üçá','üçì','üçí','üçç','ü•ù','üçâ',
  'ü•ë','üçë','üçã','üçä','ü••','üçà','üçê','üçè',
  'üå∏','üåº'
];

let boardSize = 4;
let cards = [];
let flipped = [];
let lock = false;
let moves = 0;
let matches = 0;
let score = 0;
let time = 0;
let timer;
let hintUsed = false;

const board = document.getElementById('gameBoard');
const timeEl = document.getElementById('time');
const movesEl = document.getElementById('moves');
const scoreEl = document.getElementById('score');
const winScreen = document.getElementById('winScreen');

function startGame() {
  boardSize = Number(document.getElementById('difficulty').value);
  resetStats();
  createBoard();
  startTimer();
  winScreen.classList.remove('show');
}

function resetStats() {
  clearInterval(timer);
  time = moves = matches = score = 0;
  hintUsed = false;
  timeEl.textContent = movesEl.textContent = scoreEl.textContent = 0;
}

function startTimer() {
  timer = setInterval(() => {
    time++;
    timeEl.textContent = time;
  }, 1000);
}

function createBoard() {
  board.innerHTML = '';
  board.style.gridTemplateColumns = `repeat(${boardSize}, 1fr)`;

  const totalPairs = (boardSize * boardSize) / 2;
  cards = emojis.slice(0, totalPairs);
  cards = [...cards, ...cards].sort(() => Math.random() - 0.5);

  cards.forEach(symbol => {
    const card = document.createElement('div');
    card.className = 'card';

    card.innerHTML = `
      <div class="card-face card-front">${symbol}</div>
      <div class="card-face card-back">?</div>
    `;

    card.onclick = () => flipCard(card, symbol);
    board.appendChild(card);
  });
}

function flipCard(card, symbol) {
  if (lock || card.classList.contains('flip')) return;

  document.getElementById('flipSound').play();
  card.classList.add('flip');
  flipped.push({ card, symbol });

  if (flipped.length === 2) {
    moves++;
    movesEl.textContent = moves;
    checkMatch();
  }
}

function checkMatch() {
  lock = true;
  const [a, b] = flipped;

  if (a.symbol === b.symbol) {
    document.getElementById('matchSound').play();
    a.card.classList.remove('flip');
    b.card.classList.remove('flip');
    a.card.classList.add('matched');
    b.card.classList.add('matched');

    matches++;
    score += 100;
    scoreEl.textContent = score;
    flipped = [];
    lock = false;

    if (matches === cards.length / 2) winGame();
  } else {
    setTimeout(() => {
      a.card.classList.remove('flip');
      b.card.classList.remove('flip');
      flipped = [];
      lock = false;
    }, 900);
  }
}

function useHint() {
  if (lock || hintUsed) return;

  lock = true;
  hintUsed = true;
  score = Math.max(0, score - 50);
  scoreEl.textContent = score;

  const hiddenCards = document.querySelectorAll('.card:not(.matched):not(.flip)');
  hiddenCards.forEach(card => card.classList.add('hint'));

  setTimeout(() => {
    hiddenCards.forEach(card => card.classList.remove('hint'));
    lock = false;
  }, 1500);
}

function winGame() {
  clearInterval(timer);
  document.getElementById('winSound').play();
  document.getElementById('finalTime').textContent = time;
  document.getElementById('finalMoves').textContent = moves;
  document.getElementById('finalScore').textContent = score;
  winScreen.classList.add('show');
}
</script>

</body>
